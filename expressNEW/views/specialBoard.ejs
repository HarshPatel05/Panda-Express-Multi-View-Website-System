<!DOCTYPE html>
<html lang="en">
  <script src="/js/scriptSpecial.js"></script>

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panda Express Specials</title>
    <link rel="stylesheet" href="/css/stylesSpecial.css" />
  </head>
  <body>
    <div class="main-container">
      <!-- Three Sections for Entrees, Sides, and Appetizers -->
      <div class="specials-container">
        <div class="specials-title">Try Our New Specials!</div>
        <div class="specials-sections">
          <!-- Entrees Section -->
          <div id="entreeSection" class="specials-column">
            <h2>Entrees</h2>
            <div class="specials-grid"></div>
          </div>

          <!-- Sides Section -->
          <div id="sideSection" class="specials-column">
            <h2>Sides</h2>
            <div class="specials-grid"></div>
          </div>

          <!-- Appetizers Section -->
          <div id="appetizerSection" class="specials-column">
            <h2>Appetizers</h2>
            <div class="specials-grid"></div>
          </div>
        </div>
      </div>

      <!-- Try Now Button -->
      <div class="cta-button-container">
        <button class="cta-button">Try Now</button>
      </div>

      <!-- Video Background -->
      <div class="video-background">
        <video autoplay muted loop id="background-video">
          <source
            src="../Panda Express Photos/Panda-Promise-Tablet-Opt.mp4"
            type="video/mp4"
          />
          Your browser does not support the video tag.
        </video>
      </div>
    </div>
  </body>
</html>
