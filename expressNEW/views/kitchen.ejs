<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kitchen Order Board</title>
    <link rel="stylesheet" href="/css/stylesKitchen.css">
    <script src="/js/scriptKitchen.js"></script>
</head>
<body>
    <header>
        <h1>Orders</h1>
    </header>
    <main>
        <div class="board">
            <section id="inProgress">
                <h2>In Progress</h2>
                <div class="orderContainer">
                    <!-- The orders will be dynamically inserted here -->

                    <!-- `<% %>` Used for executing JavaScript code without outputting anything to the HTML, typically for loops or conditionals. -->
                    <!-- `<%= %>` Used for executing JavaScript code and injecting the result directly into the HTML to display dynamic content like variables or expressions. -->
                    
                    <% if (pendingOrders && pendingOrders.length > 0) { %> <!-- Check if there are any pending orders -->

                        <% pendingOrders.forEach(order => { %> <!-- Loop through each pending order -->

                            <div class="orderCard" data-status="in-progress" data-total-cost="<%= order.totalCost %>"> <!-- Create a div for each order -->

                                <h3>Order #<%= order.orderId %></h3> <!-- Display the order ID dynamically -->

                                <ul> <!-- Start an unordered list for the items in the order -->
                                    <% order.items.forEach(item => { %> <!-- Loop through each item in the order -->
                                        <li><%= item %></li> <!-- Display each item in the order as a list item -->
                                    <% }) %> <!-- End the loop for items -->
                                </ul>

                            </div>

                        <% }) %> <!-- End the loop for orders -->

                    <% } else { %> <!-- If no pending orders -->
                        <p>No pending orders.</p> <!-- Display a message indicating no orders -->
                    <% } %> <!-- End the if statement -->

