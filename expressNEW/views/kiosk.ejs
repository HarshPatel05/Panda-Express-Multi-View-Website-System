<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiosk</title>
    <link rel="stylesheet" href="/css/stylesKiosk.css">
    <script src="/js/scriptKiosk.js"></script>
</head>
<body>
    <!-- Top Buttons (Dropdown) -->
    <div class="top-menu">
        <a href="/index">
            <img src="../Panda Express Photos/Panda Express Logo.png" alt="Home" class="Panda-Logo">
        </a>
        <h1 class="kiosk-title">Welcome to the Panda Express!!!</h1>
        <button class="rewards-button">Rewards Member</button>
    </div>
    

    <!-- Main Kiosk Layout -->
    <div class="kiosk-container">
        <!-- Order Summary on the Left -->
        <div id="orderSummary" class="order-panel">
            <h2>Your Order</h2>
            <div id="orderItems" class="order-items"></div>
            <div class="total">
                <span>Total: $<span id="totalAmount">0.00</span></span>
            </div>
            <button class="checkout-button" onclick="goToCheckout()">Checkout</button>
        </div>        

        <!-- Main Kiosk Interface -->
        <!-- Main Page Panel -->
        <div id="mainPanel" class="kiosk-panel">
            <div class="categories-grid">
                <div class="category-button" onclick="showPanel('bowlPanel')">
                    <img src="/Panda Express Photos/Bowl.png" alt="Bowl">
                    <span>Bowl<br>2 Side + 1 Entree<br>$8.30+</span>
                </div>
                <div class="category-button" onclick="showPanel('platePanel')">
                    <img src="/Panda Express Photos/Plate.png" alt="Plate">
                    <span>Plate<br>2 Side + 2 Entree<br>$9.80+</span>
                </div>
                <div class="category-button" onclick="showPanel('biggerPlatePanel')">
                    <img src="/Panda Express Photos/BgPlate.png" alt="Bigger Plate">
                    <span>Bigger Plate<br>2 Side + 3 Entree<br>$11.30+</span>
                </div>
                <div class="category-button" onclick="showPanel('aLaCartePanel')">
                    <img src="/Panda Express Photos/ALaCarte.png" alt="A La Carte">
                    <span>A La Carte<br>$11.30+</span>
                </div>
                <div class="category-button" onclick="showPanel('appetizersPanel')">
                    <img src="/Panda Express Photos/Apple Pie Roll.png" alt="Appetizers">
                    <span>Appetizers<br>$11.30+</span>
                </div>
                <div class="category-button" onclick="showPanel('drinksPanel')">
                    <img src="/Panda Express Photos/Pepsi.png" alt="Drinks">
                    <span>Drinks<br>$11.30+</span>
                </div>
            </div>
        </div>
        
        <!-- Hidden Panels -->
        <div id="bowlPanel" class="kiosk-panel hidden">
            <h1>Choose Your Entree and Sides</h1>
            <div id="bowl-items" class="items-grid"></div>
            <button class="back-button" onclick="showPanel('mainPanel')">Back</button>
        </div>
        
        <div id="platePanel" class="kiosk-panel hidden">
            <h1>Choose Your Entrees and Sides</h1>
            <div id="plate-items" class="items-grid"></div>
            <button class="back-button" onclick="showPanel('mainPanel')">Back</button>
        </div>
        
        <div id="biggerPlatePanel" class="kiosk-panel hidden">
            <h1>Choose Your Entrees and Sides</h1>
            <div id="bigger-plate-items" class="items-grid"></div>
            <button class="back-button" onclick="showPanel('mainPanel')">Back</button>
        </div>
        
        <div id="aLaCartePanel" class="kiosk-panel hidden">
            <h1>Choose A La Carte Items</h1>
            <div id="a-la-carte-items" class="items-grid"></div>
            <button class="back-button" onclick="showPanel('mainPanel')">Back</button>
        </div>
        
        <div id="appetizersPanel" class="kiosk-panel hidden">
            <h1>Choose Your Appetizers</h1>
            <div id="appetizers-items" class="items-grid"></div>
            <button class="back-button" onclick="showPanel('mainPanel')">Back</button>
        </div>
        
        <div id="drinksPanel" class="kiosk-panel hidden">
            <h1>Choose Your Drink</h1>
            <div id="drinks-items" class="items-grid"></div>
            <button class="back-button" onclick="showPanel('mainPanel')">Back</button>
        </div>
        


    </div>
    
    <div id="bottomBar" class="bottom-bar">
        <!-- Future content can go here -->
    </div>
</body>
</html>

